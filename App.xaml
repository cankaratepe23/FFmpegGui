<Application x:Class="FFmpegGui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FFmpegGui"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:CustomBooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"
                                                  True="Visible"
                                                  False="Collapsed" />
        <local:CustomBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"
                                                  True="Collapsed"
                                                  False="Visible" />
        <local:TimeSpanStringConverter x:Key="TimeSpanStringConverter" />
    </Application.Resources>
</Application>